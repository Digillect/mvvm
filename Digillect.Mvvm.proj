<?xml version="1.0" encoding="utf-8"?>

<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<BuildToolsVersion>1.2.5</BuildToolsVersion>
		<Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>

		<BuildPath>target\$(Configuration)\bin</BuildPath>
		<OutputPath>target\$(Configuration)\packages</OutputPath>
		<VersionAssembly>$(BuildPath)\net45+win8+wp8+wp81+wpa81\Digillect.Mvvm.dll</VersionAssembly>
		<ExcludeList>$(BuildPath)\**\*.xml.old;$(BuildPath)\**\*.dll.config</ExcludeList>
	</PropertyGroup>

	<ItemGroup>
		<LibWP71 Include="$(BuildPath)\wp71\**\Digillect.Mvvm.*" Exclude="$(ExcludeList)"/>
		<LibWP71 Include="$(BuildPath)\wp71\Microsoft.Contracts.dll"/>
		<LibNet45 Include="$(BuildPath)\net45+win8+wp8+wp81+wpa81\**\Digillect.Mvvm.*" Exclude="$(ExcludeList)"/>
		<LibPortable Include="$(BuildPath)\net45+win8+wp8+wp81+wpa81\**\Digillect.Mvvm.*" Exclude="$(ExcludeList)">
			<Profile>net45+win8+wp8+wp81+wpa81</Profile>
		</LibPortable>
		<LibWP80 Include="$(BuildPath)\net45+win8+wp8+wp81+wpa81\**\Digillect.Mvvm.*" Exclude="$(ExcludeList)">
			<Profile>net45+win8+wp8+wp81+wpa81</Profile>
		</LibWP80>

	</ItemGroup>

	<Import Project="packages\Digillect.Build.Tools.$(BuildToolsVersion)\tools\NuGet.Packaging.targets"/>

	<Target Name="TransformPackageVersion">
		<PropertyGroup>
			<_Major>$([System.Text.RegularExpressions.Regex]::Replace($(PackageVersion), "(\d+.\d+.\d+)\.\d+.*", "$1"))</_Major>
			<_Build>$([System.Text.RegularExpressions.Regex]::Replace($(PackageVersion), "\d+.\d+.\d+\.(\d+).*", "$1"))</_Build>
			<_Suffix>$([System.Text.RegularExpressions.Regex]::Replace($(PackageVersion), "\d+.\d+.\d+\.\d+(.*)", "$1"))</_Suffix>
			<_FormattedBuildNumber>$([System.String]::Format( "{0:00000}", $([MSBuild]::Add( $(_Build), 0 )) ))</_FormattedBuildNumber>

			<PackageVersion>$(_Major)$(_Suffix)</PackageVersion>
			<PackageVersion Condition=" '$(BranchName)' != '' And '$(BranchName)' != 'master' ">$(PackageVersion)-$(BranchName)-$(_FormattedBuildNumber)</PackageVersion>
		</PropertyGroup>
	</Target>
</Project>
